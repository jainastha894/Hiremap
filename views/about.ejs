<style>
   
@import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap');

body {
  margin: 0;
  padding: 0;
  font-family: 'Poppins', sans-serif;
  background: linear-gradient(135deg, #eef2ff, #f3f4f6);
  color: #333;
}

#welcome h1{
  color: white;
}
#pages {
  position: absolute;
  top: 30px;
  right: 40px;
  width: 30%;
  display: flex;
  justify-content: flex-end;
  gap: 20px;
}
#pages button {
  background-color: white;
  color: #1a252f;
  border: none;
  padding: 10px 20px;
  font-weight: bold;
  border-radius: 8px;
  cursor: pointer;
  transition: 0.3s ease;
}

#pages button:hover {
  background-color: #cbd5e1;
  transform: scale(1.05);
}


main {
  max-width: 1000px;
  margin: 0 auto;
  padding: 60px 20px;
  animation: fadeIn 1s ease-in-out;
}

section {
  background: rgba(255, 255, 255, 0.75);
  backdrop-filter: blur(10px);
  padding: 35px;
  margin-bottom: 35px;
  border-radius: 20px;
  box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08);
  transition: transform 0.3s ease, box-shadow 0.3s ease;
}

section:hover {
  transform: translateY(-5px);
  box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
}

.hero {
  background: linear-gradient(135deg, #4f46e5, #6366f1);
  color: white;
  text-align: center;
  padding: 80px 30px;
  border-radius: 20px;
  box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
  margin-bottom: 50px;
}

.hero h1 {
  font-size: 3.2rem;
  margin-bottom: 15px;
}

.hero p {
  font-size: 1.2rem;
  opacity: 0.95;
}

h2 {
  color: #4f46e5;
  font-size: 1.6rem;
  margin-bottom: 15px;
}

ul {
  list-style: none;
  padding-left: 0;
}

ul li {
  margin-bottom: 10px;
  font-size: 1.05rem;
  position: relative;
  padding-left: 25px;
}

ul li::before {
  content: "âœ…";
  position: absolute;
  left: 0;
  top: 0;
  color: green;
}

footer {
  background: #111827;
  color: #d1d5db;
  text-align: center;
  padding: 30px 10px;
  margin-top: 60px;
}

footer p {
  margin: 0;
  font-size: 0.95rem;
}

footer .social-media {
  margin-top: 15px;
}

footer .social-media a {
  color: #a5b4fc;
  margin: 0 12px;
  text-decoration: none;
  font-size: 1.1rem;
  transition: color 0.3s ease;
}

footer .social-media a:hover {
  color: #c4b5fd;
  text-decoration: underline;
}

@keyframes fadeIn {
  from { opacity: 0; transform: translateY(30px); }
  to { opacity: 1; transform: translateY(0); }
}
#main>h1{
    text-align: center;
    font-family:serif;
    margin-top: 0;
}

</style>

      text-decoration: underline;
      font-weight: 500;
      transition: color 0.2s ease;
    }

    #content a:hover {
      color: #2e7d32;
      text-decoration: none;
    }

    /* Highlight Boxes */
    #content .highlight {
      background-color: #e8f5e9;
      padding: 12px 16px;
      border-left: 4px solid #81c784;
      border-radius: 6px;
      margin: 20px 0;
    }

    /* styling second page  */
    #second {
      min-width: min-content;
      margin: none;
    }

    #third {

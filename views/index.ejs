      0% {
        opacity: 0;
        transform: translateY(20px);
      }

      100% {
        opacity: 1;
        transform: translateY(0);
      }
    }

    #fourth {
      background-color: rgb(204, 237, 250);
      /* White background */
      height: 400px;
      /* Adjust height */
      display: flex;
      justify-content: center;
      /* Centers content horizontally */
      align-items: center;
      /* Centers content vertically */
      text-align: center;
      /* Aligns text centrally */
      padding: 20px;
      color: #222;
      /* Darker gray for better contrast */
      font-size: 30px;
      /* Slightly bigger font */
      font-weight: bold;
      /* Makes text bold */
      font-family: 'Georgia', serif;
      /* Elegant serif font */
      border-radius: 10px;
      /* Rounded corners */
      box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.15);
      /* Enhanced shadow */
      position: relative;
      animation: fadeIn 1.5s ease-in-out;
      /* Smooth fade-in effect */
    }

    .quote {
      font-style: italic;
      font-weight: 500;
      font-size: 1.8rem;
      color: #333;
      text-align: center;
      quotes: "‚Äú" "‚Äù" "‚Äò" "‚Äô";
    }

    .quote::before {
      content: open-quote;
    }

    .quote::after {
      content: close-quote;
    }



    #third h2 {

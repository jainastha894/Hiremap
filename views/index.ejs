  <style>
    body {
      box-sizing: border-box;
    }

    * {
      font-family: 'Plus Jakarta Sans', sans-serif;
    }

    .carousel-track,
    .stats-carousel-track {
      animation: scroll 30s linear infinite;
    }

    .carousel-track:hover,
    .stats-carousel-track:hover {
      animation-play-state: paused;
    }

    @keyframes scroll {
      0% {
        transform: translateX(0);
      }

      100% {
        transform: translateX(-50%);
      }
    }

    .benefit-card {
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .benefit-card:hover {
      transform: translateY(-8px);
      box-shadow: 0 20px 40px -10px rgba(59, 130, 246, 0.3);
    }

    .benefit-category-content {
      animation: fadeInUp 0.5s ease-out;
    }

    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(20px);
      }

      to {
        opacity: 1;
        transform: translateY(0);
      }
    }

    .gradient-text {
      background: linear-gradient(135deg, #1e40af 0%, #3b82f6 50%, #60a5fa 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(229, 231, 235, 0.8);
    }

    .role-card {
      transition: all 0.3s;
      border-left: 3px solid transparent;
    }

    .role-card:hover {
      transform: translateX(4px);
      box-shadow: 0 8px 30px -5px rgba(30, 64, 175, 0.15);
      border-left-color: #3b82f6;
      background: #fafbfc;
    }

    .blob {
      position: absolute;
      border-radius: 50%;
      filter: blur(100px);
      opacity: 0.3;
      animation: float 10s ease-in-out infinite;
    }

    @keyframes float {

      0%,
      100% {
        transform: translate(0, 0) scale(1);
      }

      33% {
        transform: translate(50px, -50px) scale(1.15);
      }

      66% {
        transform: translate(-30px, 30px) scale(0.85);
      }
    }

    .pulse-dot {
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {

      0%,
      100% {
        opacity: 1;
        transform: scale(1);
      }

      50% {
        opacity: 0.5;
        transform: scale(1.2);
      }
    }

    .stat-card {
      position: relative;
      overflow: hidden;
    }

    .stat-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, #3b82f6, #60a5fa);
    }

    /* Responsive adjustments */
    @media (max-width: 640px) {

      .carousel-track,
      .stats-carousel-track {
        animation: scroll 20s linear infinite;
      }
    }

    #content {

      background-color: #f8f4f8;
      /*heading content!!!!!*/
      align-content: center;
      align-items: center;
      margin-right: 10%;

    }

    #content {
      padding: 30px;
      background-color: #fcfdfc;
      /* very light greenish white */
      border-left: 2px solid #c8e6c9;
      height: 100%;
      overflow-y: auto;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      border-radius: 10px;
      box-shadow: 0 4px 14px rgba(76, 175, 80, 0.06);
      /* subtle green glow */
      color: #2e2e2e;
      margin-left: 160px;
    }

    /* Headings */
    #content h1,
    #content h2,
    #content h3,
    #content h4 {
      margin-top: 20px;
      color: #2e5939;
      /* deep leafy green */
    }

    #content h1 {
      font-size: 2rem;
      border-bottom: 2px solid #a5d6a7;
      padding-bottom: 10px;
      margin-bottom: 25px;
    }

    #content h2 {
      font-size: 1.5rem;
      margin-bottom: 15px;
    }

    #content h3 {
      font-size: 1.3rem;
      margin-bottom: 10px;
    }

    #content h4 {
      font-size: 1.1rem;
      margin-bottom: 8px;
      color: #446b4c;
    }

    /* Paragraphs and Text */
    #content p {
      line-height: 1.7;
      color: #444;
      margin-bottom: 15px;
      font-size: 16px;
    }

    /* Lists */
    #content ol,
    #content ul {
      margin-left: 25px;
      color: #444;
      padding-left: 10px;
    }

    #content li {
      margin-bottom: 10px;
      line-height: 1.5;
    }

    #content ol[type="a"] {
      list-style-type: lower-alpha;
    }

    #content ol[type="1"] {
      list-style-type: decimal;
    }

    #content ul li {
      list-style-type: disc;
    }

    /* Links */
    #content a {
      color: #ff0000;

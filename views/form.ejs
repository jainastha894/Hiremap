<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link rel="stylesheet" href="/styles/form.css">
</head>

<body>

    <div id="main">
      <h1>Resume Submission Form</h1>
      <form id="form">
        <label for="name">Full Name:</label><br>
        <input type="text" id="name" name="name" required><br><br>

        <label for="email">Email:</label><br>
        <input type="email" id="email" name="email" required><br><br>

        <label for="phone">Contact:</label>
        <input type="tel" id="phone" name="phone" required>

        <label for="address">Address: </label>
        <textarea name="address" id="address" rows="4" cols="50"></textarea>

        <% if (jobs) { %>

  <select name="role" id="roleSelect" required>
    <option value="">-- Select Role --</option>

    <% jobs.forEach((job) => { %>
      <option value="<%= job.job_name %>"><%= job.job_name %></option>
    <% }) %>

  </select>


<% } %>

        <br><br>

        <label for="resume">Upload Resume (PDF/DOC):</label><br>
        <input type="file" id="resume" name="resume" accept=".pdf,.doc,.docx" required><br><br>
        

        <button type="submit" id="submitBtn">Submit</button>

      </form>
    </div>
    <script>
      let allUploadsSuccessful;
      const roleSelect = document.getElementById('roleSelect');
      const eligibilityDiv = document.getElementById('eligibilityCheckboxes');
      const submitBtn = document.getElementById('submitBtn');

     
      //form submission and file upload to S3
      let message;

      async function uploadResume() {

        try {

          const fileInput = document.getElementById("resume");
          const file = fileInput.files[0];

          if (file.size > 2 * 1024 * 1024) {
            message = "File size exceeds 2MB. Please upload a smaller file.";

          }
          else {
            const urlResponse = await fetch('/upload?filename=' + file.name);
            const {key, url } = await urlResponse.json();  // backend sends { url: "https://s3..." }

            const uploadResponse = await fetch(url, {
              method: "PUT",
              body: file,
              headers: {
                'Content-Type': file.type || 'application/octet-stream'
              }
            });

            if (uploadResponse.ok) {
              console.log(`✅ Uploaded ${file.name} successfully.`);
              console.log("the key received after upload:",key);
              allUploadsSuccessful = true;
              return key;

            } else {
              console.error(`❌ Failed to upload ${file.name}. Status: ${uploadResponse.status}`);
              message="Failed to upload your resume. please try again. status:"+uploadResponse.status;
              allUploadsSuccessful = false;
            }

          }

        }

        catch (error) {
          console.error("Error during file upload:", error);
          message = ("An error occurred during file upload. Please try again.", error);

        }
      }

      // Handle form submission
      document.querySelector("form").addEventListener("submit", async (e) => {
       e.preventDefault();

        // First upload the file to S3
        let thekey=await uploadResume();
        if(allUploadsSuccessful==true) {
        // // Now collect form data
        // const getResumeResponse = await fetch('/getresume?key=' + thekey);
        // const {key,url}=await getResumeResponse.json();
        const formData = {
          name: document.getElementById("name").value,
          email: document.getElementById("email").value,
          phone: document.getElementById("phone").value,
          address: document.getElementById("address").value,
          role: document.getElementById("roleSelect").value,
          resume:thekey
        };

        // Send as JSON
        const response = await fetch("/submit-resume", {
          method: "POST",
          headers: { "Content-Type": "application/json" },
          body: JSON.stringify(formData),
        });

        if (!response.ok) {
          const errorText = await response.text();
          console.error("Error submitting form:", errorText);
          message= "Resume uploaded but Error submitting form: " + errorText;
          const result = await response.text();
          console.log("the result: ",result);
          alert(message);
          window.location.href = "/form"; // Redirect to homepage or another page
        }
        else{
        message= "resume submitted successfully!";
        alert(message);
        window.location.href = "/form"; // Redirect to homepage or another page
       
        }
        
        }
        
      });


    </script>
</body>

</html>
